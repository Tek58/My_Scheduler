datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id            Int       @default(autoincrement()) @id
  title         String
  description   String?
  location      String
  startTime     DateTime
  endTime       DateTime
  createdBy     User?       @relation(fields: [userId], references: [id])
  userId        Int?
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String?   @unique
  password      String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  events        Event[]
}


